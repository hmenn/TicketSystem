<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Ticket System</display-name>

	<filter>
	    <filter-name>SessionFilter</filter-name> <!-- mandatory -->
	    <filter-class>com.j32bit.ticket.servlet.filter.SessionFilter</filter-class> <!-- mandatory -->
	    <init-param> <!-- optional -->
	    <param-name>urls</param-name>
	    <param-value>index.html</param-value>
	    </init-param>
	  </filter>

  <filter-mapping>
    <filter-name>SessionFilter</filter-name> <!-- mandatory -->
    <url-pattern>/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
    <servlet-name>LoginServlet</servlet-name>
  </filter-mapping>
	
	<!-- JERSEY -->
	<servlet>
	  	<servlet-name>Ticket System</servlet-name>
	  	<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
	  
	  	<init-param>
	            <param-name>com.sun.jersey.config.property.packages</param-name>
	            <param-value>com.j32bit.ticket.rest</param-value>
	  	</init-param>
	  	
		<init-param>
	            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
	            <param-value>true</param-value>
		</init-param>
		
		<init-param>
	        <param-name>com.sun.jersey.spi.container.ResourceFilters</param-name>
	        <param-value>com.sun.jersey.api.container.filter.RolesAllowedResourceFilterFactory</param-value>
	    </init-param>
		
	  	<load-on-startup>1</load-on-startup>
	</servlet>
  
  <servlet-mapping>
  	<servlet-name>Ticket System</servlet-name>
  	<url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

	<!-- SECURITY ROLES -->
	<security-role>
     	<description>Administrator</description>
     	<role-name>admin</role-name>
	</security-role>
	
	<security-role>
     	<description>Client</description>
     	<role-name>client</role-name>
	</security-role>

	<security-role>
     	<description>Supporter</description>
     	<role-name>supporter</role-name>
	</security-role>

	<!-- CONSTRAINT -->
  	<security-constraint>
    	<display-name>Ticket System</display-name>
    	<web-resource-collection>
        	<web-resource-name>Ticket System</web-resource-name>
			<!-- Restricting access only to this URL for the GET method -->
   	    	<url-pattern>/*</url-pattern>
  		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
			<role-name>client</role-name>
			<role-name>supporter</role-name>
    	</auth-constraint>
	</security-constraint>

	<!-- ContextListener -->
	<listener>
		<listener-class>com.j32bit.ticket.listener.ContextListener</listener-class>
	</listener>

	<!-- Using Basic authentication -->
	<login-config>
 		<auth-method>FORM</auth-method>  
 		<form-login-config>
			<form-login-page>/login.html</form-login-page>
			<form-error-page>/login.html</form-error-page>
 		</form-login-config>
	</login-config> 


	<!-- CONNECTION POOL JNDI -->
	<resource-ref>
		<description>Ticket DB Connecion Pool Source</description>
		<res-ref-name>jdbc/TicketDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- error pages -->
	<error-page>
    	<error-code>404</error-code>
    	<location>/errorPage.html?err=404</location>
	</error-page>

	<error-page>
    	<error-code>500</error-code>
    	<location>/errorPage.html?err=500</location>
	</error-page>
	
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
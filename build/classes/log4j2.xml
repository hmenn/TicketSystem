<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" > <!-- log4j sistem errorlari -->

  <Appenders>
	<!-- PRINT LOGS TO CONSOLE -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %p %c{3} - %m%n"/>
    </Console>
	
	<!-- PRINT LOGS TO FILE -->
	<RollingFile name="FileWriter" fileName="./log4j2Test.log" filePattern="log4j2Test-%d{MM-dd-yyyy}-%i.log" >
		<PatternLayout>
        	<Pattern>%d %p %c{3} %m%n</Pattern>
        </PatternLayout>
        <Policies>
        	<TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="1 MB"/>
        </Policies>
        <DefaultRolloverStrategy max="2000"/>

	</RollingFile>
  </Appenders>

  <Loggers>

	<Logger name="com.j32bit.ticket" level="debug" additivity="false">
		<appender-ref ref="FileWriter" level="debug"/>
		<appender-ref ref="Console" level="debug"/>		
	</Logger>

    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>